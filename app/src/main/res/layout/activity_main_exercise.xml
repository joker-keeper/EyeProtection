<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/rePlayBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/replay"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        />


    <ImageButton
        android:id="@+id/pauseBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/pause"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/exitBtn"
        android:layout_marginEnd="10dp"/>

    <ImageButton
        android:id="@+id/exitBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/exit"/>
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Eye Exercise"-->
<!--        android:textColor="@color/white"-->
<!--        android:textSize="50sp"-->
<!--        android:gravity="center"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginBottom="100dp"-->
<!--        android:layout_marginTop="30dp"/>-->
    <ImageView
        android:id="@+id/arrow_center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:src="@drawable/baseline_double_arrow" />

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/arrow_center"
        android:src="@drawable/baseline_double_arrow"/>

    <ImageView
        android:id="@+id/arrow_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:rotation="-180"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/arrow_center"
        android:src="@drawable/baseline_double_arrow" />

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:rotation="90"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/arrow_center"
        android:src="@drawable/baseline_double_arrow" />

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:rotation="-90"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/arrow_center"
        android:src="@drawable/baseline_double_arrow" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:text="请按照箭头方向移动眼睛"
        android:gravity="center"
        android:textSize="36sp"
        android:textColor="@color/white"/>


</RelativeLayout>